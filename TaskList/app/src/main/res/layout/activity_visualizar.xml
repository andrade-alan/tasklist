<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDFBFF"
    android:padding="16sp"
    tools:context=".Visualizar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTrabalho3"
            android:layout_width="121sp"
            android:layout_height="wrap_content"
            android:text="Tarefa:"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etTrabalho3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:paddingLeft="6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvData3"
            android:layout_width="121sp"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etData3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:paddingLeft="6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHorarioAl3"
            android:layout_width="121sp"
            android:layout_height="wrap_content"
            android:text="Horário Alarme:"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etHorarioAl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:paddingLeft="6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHorario3"
            android:layout_width="121sp"
            android:layout_height="wrap_content"
            android:text="Horário Tarefa:"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etHorario3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:paddingLeft="6sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDesc3"
            android:layout_width="121sp"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etDesc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:ems="50"
            android:inputType="textMultiLine"
            android:paddingLeft="6sp" />
    </LinearLayout>

</TableLayout>
