<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:background="#EDFBFF"
    tools:context=".Editar">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTrabalho2"
                    android:layout_width="121sp"
                    android:layout_height="wrap_content"
                    android:text="Tafefa:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/voz3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_btn_speak_now" />

                <EditText
                    android:id="@+id/etTrabalho2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda"
                    android:paddingLeft="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvData2"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:text="Data:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etEditData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@drawable/borda"
                    android:paddingLeft="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHorarioAl2"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:text="Horário Alarme:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etEditHoraAl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@drawable/borda"
                    android:paddingLeft="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHorario2"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:text="Horário Tarefa:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etEditHoraTar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@drawable/borda"
                    android:paddingLeft="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDesc2"
                    android:layout_width="121sp"
                    android:layout_height="wrap_content"
                    android:text="Descrição:"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/voz4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_btn_speak_now" />

                <EditText
                    android:id="@+id/etDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda"
                    android:ems="50"
                    android:inputType="textMultiLine"
                    android:paddingLeft="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50sp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btAtualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botoes"
                    android:text="Atualizar"
                    android:textColor="#555555"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableLayout>
    </ScrollView>

</TableLayout>
